{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES6",
    ],
    "allowJs": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**.*"
  ],
}